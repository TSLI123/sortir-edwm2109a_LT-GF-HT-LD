{% extends 'base.html.twig' %}

{% block body %}

    <div>
        <h2>Afficher une sortie</h2>

        <div>Nom de la sortie: {{ sortie.nom }}</div>
        <div>Date et heure de la sortie : {{ sortie.dateHeureDebut | date()}}</div>
        <div>Nombre de places : {{ sortie.nbInscriptionsMax }}</div>
        <div>Dur√©e : {{ sortie.duree }} minutes</div>
        <div>Description et infos : {{ sortie.infosSortie }}</div>
        <div>Campus : {{ sortie.campus.nom }}</div>
        <div>Lieu : {{ sortie.lieu.ville.nom }}</div>
        <div>Rue : {{ sortie.lieu.rue }}</div>
        <div>Code postal : {{ sortie.lieu.ville.codePostal }}</div>
        <div>Latitude : {{ sortie.lieu.latitude }}</div>
        <div>Longitude : {{ sortie.lieu.longitude }}</div>

    </div>
    <div>
        <a href="#" class="w3-button w3-round-xlarge w3-border">S'inscrire</a>
    </div>

    <h2>Liste des participants :</h2>

    <div class="w3-responsive tableFixHead">

        <table class="w3-table-all w3-hoverable ">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
            </tr>
            </thead>
            <tbody>
                {% for participant in sortie.participants  %}
                    <tr>
                        <td><a href="{{ path('participant_profil', {"pseudo" : participant.pseudo}) }}">{{ participant.pseudo }}</a></td>
                        <td>{{ participant.prenom }} {{ participant.nom|upper }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

</div>

    <div class="w3-center">
        <button class="w3-btn w3-large w3-border" onclick="history.go(-1)">Retour</button>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

