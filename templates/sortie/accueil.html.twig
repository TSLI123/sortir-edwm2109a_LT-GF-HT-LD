{% extends 'base.html.twig' %}

{% block title %}Acceuil | {{ parent() }}{% endblock %}

{% block body %}


<h3>Filter les sorties</h3>

    <div>
        {{ form_start(sortieForm)}}
        {{ form_widget(sortieForm) }}
        <button>Rechercher</button>
        {{ form_end(sortieForm)}}
    </div>

<div class="w3-responsive tableFixHead">
    <table class="w3-table-all w3-hoverable ">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Cl√¥ture</th>
                <th>inscrits/places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut | date('d/m/Y h:i') }}</td>
                <td>{{ sortie.dateLimiteInscription | date('d/m/Y') }}</td>
                <td>{{ sortie.participants.count }}/{{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td>Inscrit</td>
                <td>{{ sortie.organisateur.nom}}</td>
                <td>Actions</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
