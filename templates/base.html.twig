<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Sortie{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/w3.css') }}" >
    <link rel="stylesheet" href="{{ asset('css/app.css') }}" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro&display=swap" rel="stylesheet">



    {% block extrastyles %}{% endblock %}
</head>
<body>


<div class="w3-container">
    <header>
        {% if app.user %}
            <nav>
                {% if is_granted("ROLE_ADMIN") %}
                    <a href="#">Villes</a>
                    <a href="#">Campus</a>
                {% endif %}

                <a href="{{ path('sortie_accueil') }}">Accueil</a>
                <a href="{{ path('profil', {'id':app.user.id}) }}">Mon profil</a>
                <a href="{{ path('app_logout') }}">Se d√©connecter</a>
            </nav>
        {% endif %}
    </header>
</div>

    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="w3-container">
        <main>
            {% block body %}{% endblock %}
        </main>
    </div>

    <div class="w3-container w3-bottom">
        <footer>

            <div class="w3-border-bottom">&copy; {{ "now"|date("Y") }} Sorties ENI</div>

        </footer>
    </div>
</body>
</html>