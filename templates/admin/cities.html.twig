                            <td>
                                    <a href="#">Modifier</a>

                                    <a href="{{ path('admin_remove_city', {"id": city.id}) }}">Supprimer</a>
                            </td>
                        </tr>
                {% endfor %}
                {{ form_start(cityForm) }}
                        <tr>
                            <td>{{ form_widget(cityForm.nom) }}</td>
                            <td>{{ form_widget(cityForm.codePostal) }}</td>
                            <td>{{ form_widget(cityForm.submit) }}</td>
                        </tr>
                {{ form_end(cityForm) }}


                </tbody>
            </table>
        </div>

    </div>
